<!DOCTYPE html>
<html>
  <%- include('../partials/header'); %>

  <body>
    <%- include('../partials/navbar'); %>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center my-5 mb-3">
        <h3 class="mb-0"><%= title %></h3>
        <%- include('./partials/top'); %>
      </div>

      <form id="courseForm">
        <input id="courseId" type="hidden" value="<%= course.id %>" />
        <div class="row mb-3">
          <div class="col">
            <label class="form-label">Course Name:</label>
            <input id="courseName" class="form-control" type="text" value="<%= course.name %>" required />
          </div>
          <div class="col"></div>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
        <a class="btn btn-secondary" href="/courses">Cancel</a>
        <%- include('./submitform'); %>
      </form>
    </div>
  </body>
</html>
