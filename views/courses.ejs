<!DOCTYPE html>
<html>
  <%- include('./partials/header'); %>

  <body>
    <%- include('./partials/navbar'); %>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center my-5 mb-3">
        <h3 class="mb-0"><%= title %></h3>
        <%- include('./courses/partials/top'); %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Course Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(function(course) { %>
          <tr>
            <td><%= course.name %></td>
            <td>
              <button class="btn btn-sm btn-danger mx-1" data-id="<%= course.id %>" role="delete">Delete</button>
              <a class="btn btn-sm btn-secondary mx-1" href="courses/<%= course.id %>" role="edit">Edit</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <%- include('./courses/partials/actions'); %>
  </body>
</html>
