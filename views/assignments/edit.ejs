<!DOCTYPE html>
<html>
  <%- include('../partials/header'); %>

  <body>
    <%- include('../partials/navbar'); %>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center my-5 mb-3">
        <h3 class="mb-0"><%= title %></h3>
        <%- include('./partials/top'); %>
      </div>

      <form id="assignmentForm">
        <input id="assignmentId" type="hidden" value="<%= assignment.id %>" />
        <div class="row mb-3">
          <div class="col">
            <label class="form-label">Assignment Name:</label>
            <input id="assignmentName" class="form-control" type="text" value="<%= assignment.name %>" required />
          </div>
          <div class="col">
            <label class="form-label">Due Date:</label>
            <input id="assignmentDueDate" class="form-control" type="date" value="<%= assignment.due_at %>" required />
          </div>
        </div>
        <div class="row mb-3">
          <div class="col">
            <label class="form-label">Points Possible:</label>
            <input id="assignmentPointsPossible" class="form-control" type="number" value="<%= assignment.points_possible %>" required />
          </div>
          <div class="col"></div>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
        <a class="btn btn-secondary" href="/assignments">Cancel</a>
        <%- include('./submitform'); %>
      </form>
    </div>
  </body>
</html>
