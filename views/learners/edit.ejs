<!DOCTYPE html>
<html>
  <%- include('../partials/header'); %>

  <body>
    <%- include('../partials/navbar'); %>
    <div class="container">
      <div class="d-flex justify-content-between align-items-center my-5 mb-3">
        <h3 class="mb-0"><%= title %></h3>
        <%- include('./partials/top'); %>
      </div>

      <form id="learnerForm">
        <input id="learnerId" type="hidden" value="<%= learner.id %>" />
        <div class="row mb-3">
          <div class="col">
            <label class="form-label">First Name:</label>
            <input id="learnerFirstName" class="form-control" type="text" value="<%= learner.name.first_name %>" required />
          </div>
          <div class="col">
            <label class="form-label">Email:</label>
            <input id="learnerEmail" class="form-control" type="email" value="<%= learner.email %>" required />
          </div>
        </div>
        <div class="row mb-3">
          <div class="col">
            <label class="form-label">Last Name:</label>
            <input id="learnerLastName" class="form-control" type="text" value="<%= learner.name.last_name %>" required />
          </div>
          <div class="col"></div>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
        <a class="btn btn-secondary" href="/learners">Cancel</a>
        <%- include('./submitform'); %>
      </form>
    </div>
  </body>
</html>
